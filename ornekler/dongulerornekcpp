#include <iostream> //input output kutuphanesi

using namespace std;

int main()
{
    setlocale(LC_ALL,"Turkish");//turk√ße karakter kullanmamizi saglar.
    int sayi;
    cout << "sayi girin:";
    cin >> sayi;
    int i=1;
    for (i=1;i<=sayi;i++)
    {   for(int j=1;j<=i;j++)
    {
        cout << i <<" " ;
    }

    cout << endl;
    }

}
